{
  "name": "Game2048",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "android": "react-native run-android",
    "android-dev": "react-native run-android --variant=debug",
    "connect-metro": "for device in $(adb devices | awk '$2==\"device\"{print $1}'); do adb -s $device reverse tcp:8081 tcp:8081; done",
    "kill-metro": "lsof -ti :8081 | xargs kill -9",
    "remove-packages": "rm -rf node_modules && rm -f package-lock.json",
    "fix": "cd android && touch local.properties && echo \"sdk.dir = /Users/$(whoami)/Library/Android/sdk\" > local.properties && cd ..",
    "fix-orientation2": "sed -i '' 's/compileSdkVersion 23/compileSdkVersion 32/g; s/buildToolsVersion \"23.0.1\"/buildToolsVersion \"30.0.1\"/g; s/targetSdkVersion 22/targetSdkVersion 32/g' ./node_modules/react-native-orientation/android/build.gradle",
    "fix-orientation": "sed -i '' '/dependencies {/,/}/ s/compile/implementation/g' ./node_modules/react-native-orientation/android/build.gradle",
    "xcode": "cd ios && open Game2048.xcodeproj && cd ..",
    "simulator": "cd ios && xcodebuild -project Game2048.xcodeproj -scheme Game2048 -destination \"platform=iOS Simulator,name=iPhone X\" && cd ..",
    "build-os": "cd android && ./gradlew clean && cd .. && cd ios && rm -f Podfile.lock && pod install && cd ..",
    "restart": "react-native start --reset-cache",
    "gen": "npm run kill-metro && npm run remove-packages && npm i && npm run fix && npm run fix-orientation && npm run build-os  && npm run restart && npm run connect-metro",
    "ios": "react-native run-ios"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.18.2",
    "@react-native-community/netinfo": "^9.4.0",
    "@react-navigation/bottom-tabs": "^6.5.7",
    "@react-navigation/drawer": "^6.6.2",
    "@react-navigation/material-top-tabs": "^6.6.2",
    "@react-navigation/native": "^6.1.6",
    "@react-navigation/native-stack": "^6.9.12",
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.4.0",
    "i18next": "^23.2.0",
    "immer": "^10.0.2",
    "lottie-react-native": "^5.1.6",
    "react": "18.2.0",
    "react-i18next": "^13.0.0",
    "react-native": "0.71.11",
    "react-native-config": "^1.5.1",
    "react-native-extended-stylesheet": "^0.12.0",
    "react-native-flipper": "^0.203.0",
    "react-native-gesture-handler": "^2.12.0",
    "react-native-localize": "^3.0.1",
    "react-native-modalize": "^2.1.1",
    "react-native-orientation": "^3.1.3",
    "react-native-pager-view": "^6.2.0",
    "react-native-reanimated": "^3.3.0",
    "react-native-responsive-screen": "^1.4.2",
    "react-native-restart": "^0.0.27",
    "react-native-safe-area-context": "^4.5.3",
    "react-native-screens": "^3.21.0",
    "react-native-svg": "^13.10.0",
    "react-native-svg-transformer": "^1.0.0",
    "react-native-tab-view": "^3.5.2",
    "react-native-webview": "^13.2.2",
    "react-redux": "^8.1.1",
    "redux": "^4.2.1",
    "redux-flipper": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.73.10",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "react-native"
  }
}
